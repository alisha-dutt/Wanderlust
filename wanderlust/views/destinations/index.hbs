<h1>All Destinations</h1>
{{#if destinations.length}}
{{#if user}}
<a class="btn btn-info text-white m-2" href="/destinations/create">Add Your Experience</a>
{{/if}}
{{else}}
<a class=" btn btn-info lead text-white m-2" href="/auth/login">Want to add your Experience?Log In to
  add</a>
{{/if}}

<div class="container">

  <div class="row m-0 p-0">
    {{#each destinations}}
    <div class="col-3  border border-1 m-2 p-2 bg-white">
      <div class="card border-0">
        <img class="card-img" src="https://source.unsplash.com/800x600/?landscape" alt="destinations">
        <div class="card-img-overlay">
          <a href="#" class="btn btn-light btn-sm"> <i
              class="fa-solid fa-location-dot text-dark"></i>{{this.placeCity}}</a>
        </div>
        <div class="card-body">
          <h4 class="card-title">{{this.placeName}}</h4>
          <small class="text-muted cat">
            <i class="fa-solid fa-location-dot text-dark"></i> {{this.placeCity}}
          </small>
          <br />
          <p class="card-text"><i class="fa-solid fa-quote-left text-success"></i>
            {{this.comments}}
            <i class="fa-solid fa-quote-right text-success"></i>
          </p>
        </div>
      </div>
      {{#if ../user}}
      <a href="/destinations/edit/{{this._id}}" class="btn btn-warning offset-2  " title="Edit"><i
          class="fa-regular fa-pen-to-square text-dark"></i> Edit</a>
      <a href="/destinations/delete/{{this._id}}" class="btn btn-warning" title="Delete"
        onclick="return confirmDelete();"><i class="text-dark fa-solid fa-trash-can"></i> Delete</a>
      {{else}}
      <p class="text-warning">Want to Edit Info? Register & Log In</p>
      {{/if}}

    </div>
    {{/each}}
  </div>
</div>